<!DOCTYPE html>
@model FinalProject.Dto.DTO.AccountDTO.AccountCheckMail
<html lang="tr">
<head>
    <title>Şifremi Unuttum</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="/Content/LoginContent/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Content/LoginContent/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Content/LoginContent/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Content/LoginContent/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Content/LoginContent/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Content/LoginContent/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Content/LoginContent/css/util.css">
    <link rel="stylesheet" type="text/css" href="/Content/LoginContent/css/main.css">
    <!--===============================================================================================-->
</head>
<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">

                <div class="login100-pic js-tilt" data-tilt>
                    <a href="/Home/Index">Anasayfaya Gitmek İçin Tıklamaya Çalışın.</a>
                    <img src="~/Content/LoginContent/images/img-01.png" alt="IMG">
                </div>
                @using (Html.BeginForm("PasswordForgot", "Account", FormMethod.Post, new { @class = "login100-form validate-form" }))
                {
                    @Html.AntiForgeryToken()
                    <span class="login100-form-title">
                      Şifremi Unuttum?

                    </span>
                    <div>
                        @ViewBag.Message
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Kullanıcı Adı Zorunludur.">
                        <input class="input100" type="text" name="Mail" placeholder="E-Mail Adresi">
                        @Html.ValidationMessageFor(model => model.Mail, "", new { @class = "text-danger" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            Şifreyi Sıfırla
                        </button>
                    </div>

                    <div class="text-center p-t-136">
                        <a class="txt2" href="/Account/Login">
                            Eğer Kullanıcı Adı ve Şifreniz Varsa Giriş Yapın.
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>

                    <div class="text-center p-t-136">
                        <a class="txt2" href="/Account/Register">
                            Eğer Hala Kayıt Olmadıysanız Tıklayın.
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>




    <!--===============================================================================================-->
    <script src="~/Content/LoginContent/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/LoginContent/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/LoginContent/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/LoginContent/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/LoginContent/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <!--===============================================================================================-->
    <script src="~/Content/LoginContent/js/main.js"></script>

</body>
</html>