<!DOCTYPE html>
@model FinalProject.Dto.DTO.AccountDTO.AccountAdd
<html lang="tr">
<head>
    <title>Kullanıcı Kayıt Ol</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="/Content/LoginContent/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Content/LoginContent/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Content/LoginContent/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Content/LoginContent/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Content/LoginContent/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Content/LoginContent/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Content/LoginContent/css/util.css">
    <link rel="stylesheet" type="text/css" href="/Content/LoginContent/css/main.css">

    <!--JQUERY UI CSS AND JS-->
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script>
       

        $(function () {
            $("#datepicker").datepicker({
                changeYear: true,
                yearRange: '1950:2030',
                monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                dayNamesMin: ["Pa", "Pt", "Sl", "Ça", "Pe", "Cu", "Ct"],
                dateFormat: 'dd.mm.yy'
            }).val();
            });
    </script>
    <!--===============================================================================================-->
</head>
<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">

                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Content/LoginContent/images/img-01.png" alt="IMG">
                </div>
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "login100-form validate-form", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                <span class="login100-form-title">
                    Kullanıcı Kayıt Ol
                    <br />
                    <span class="txt1">
                    </span>
                    <a href="/Home/Index">Anasayfaya Gitmek İçin Tıklayın.</a>

                </span>
                    @ViewBag.Message
                    <div>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="İsim Zorunludur.">
                        <input class="input100" type="text" name="Name" placeholder="İsim">
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Soyisim Zorunludur">
                        <input class="input100" type="text" name="LastName" placeholder="Soyisim">
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </span>
                    </div> <div class="wrap-input100 validate-input" data-validate="Kullanıcı Adı Zorunludur.">
                        <input class="input100" type="text" name="UserName" placeholder="Kullanıcı Adı">
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </span>
                    </div> <div class="wrap-input100 validate-input" data-validate="Şifre Zorunludur.">
                        <input class="input100" type="password" name="Password" placeholder="Şifre">
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div> <div class="wrap-input100">
                        <input class="input100" type="text" name="Address" placeholder="Adres">
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-address-card" aria-hidden="true"></i>
                        </span>
                    </div> <div class="wrap-input100">
                        <input class="input100" type="text" id="datepicker" size="30" name="Birthdate" placeholder="Doğum Tarihi">
                        @Html.ValidationMessageFor(model => model.Birthdate, "", new { @class = "text-danger" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-birthday-cake" aria-hidden="true"></i>
                        </span>
                    </div> <div class="wrap-input100 validate-input" data-validate="Email Zorunludur.">
                        <input class="input100" type="text" name="Email" placeholder="Email">
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Telefon Numarası Zorunludur.">
                        <input class="input100" type="text" name="PhoneNumber" placeholder="Telefon Numarası">
                        @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 ">
                        <input class="input100"  type="file" name="Image" >
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-file" aria-hidden="true"></i>
                        </span>
                    </div>

                
                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            Kayıt Ol
                        </button>
                    </div>

                    <div class="text-center p-t-12">
                        <span class="txt1">
                        </span>
                        <a class="txt2" href="/Account/PasswordForgot">
                            Şifremi Unuttum?
                        </a>
                    </div>

                    <div class="text-center p-t-136">
                        <a class="txt2" href="/Account/Login">
                            Eğer Kullanıcı Adı ve Şifreniz Varsa Giriş Yapın.
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>




    <!--===============================================================================================-->
    <!--===============================================================================================-->
    <script src="~/Content/LoginContent/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/LoginContent/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/LoginContent/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/LoginContent/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <!--===============================================================================================-->
    <script src="~/Content/LoginContent/js/main.js"></script>

</body>
</html>