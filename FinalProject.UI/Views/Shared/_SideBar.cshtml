                    }
                </ul>
            </div>
        </div>



        <div class="my-detail" data-ng-app="App" data-ng-controller="myCtrl">

            <div class="white-spacing">
                <h1>Berk Çolak</h1>
                <span>Web Developer</span>
            </div>
            <div ng-view style="margin-left:60px;">
                <table>
                    <tr>
                        <th>
                            <h3>
                                Kategoriler
                            </h3>
                        </th>
                    </tr>
                    <tbody>
                        <tr data-ng-repeat="data in List">
                            <td>
                                <h5><a style="color:gray;" href="/Home/BlogCatList/{{data.ID}}">{{data.Name}}</a></h5>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <ul class="social-icon">
                <li><a href="https://www.linkedin.com/in/berk-colak/" target="_blank" class="linkedin"><i class="fa fa-linkedin"></i></a></li>
