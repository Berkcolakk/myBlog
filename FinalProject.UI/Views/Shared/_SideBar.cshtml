<div class="col-md-3">
    <div class="about">
        <div class="my-pic">
            <img src="~/Content/Homepage Content/MyImage/WhatsApp Image 2018-08-08 at 1.35.10 AM.jpeg" alt="">
            <a href="javascript:void(0)" class="collapsed" data-target="#menu" data-toggle="collapse"><i class="icon-menu menu"></i></a>
            <div id="menu" class="collapse">
                <ul class="menu-link">
                    <li><a href="/Home/Index">Anasayfa</a></li>
                    <li><a href="/Home/Index">Hakkımda</a></li>
                    <li><a href="/Home/Index">Iletişim</a></li>
                    @if (!HttpContext.Current.User.Identity.IsAuthenticated)
                    {
                        <li><a href="/Account/Login">Giriş Yap</a></li>
                        <li><a href="/Account/Register">Kayıt Ol</a></li>
                    }
                    else
                    {
                        <li><a href="/Member/AppUser/AccountSetting">Kullanıcı Ayarları</a></li>
